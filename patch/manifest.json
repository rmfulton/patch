{
    "name": "Patch: Social Media Blocker and YouTube Cleaner",
    "description": "Blocks common social media sites and removes the secondary column on YouTube.",
    "version": "1.0",
    "permissions": [
       "webRequestBlocking",
       "webRequest",
       "activeTab",
       "tabs",
       "http://*/*",
       "https://*/*"
    ],
    "background" : {
      "scripts":  [
        "background.js"
      ]
    },
    "content_scripts": [
      {
        "matches": ["http://www.youtube.com/*","https://www.youtube.com/*"],
        "js": ["removeYoutubeRelated.js"]
      }
    ],
    "manifest_version": 2
  }